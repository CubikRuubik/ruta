{
  "name": "ruta-workspace",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:tauri\" \"npm run dev:backend\"",
    "dev:backend": "cd apps/backend/indexer && cargo run",
    "dev:tauri": "cd apps/desktop && npm install && npm run tauri dev",
    "build": "npm run build:backend && npm run build:tauri",
    "build:backend": "cd apps/backend && cargo build --release",
    "build:tauri": "cd apps/desktop && npm install && npm run tauri build",
    "lint": "cd apps/frontend && npm run lint",
    "test": "cd apps/backend && npm run test"
  },
  "dependencies": {
    "moment": "^2.30.1",
    "recharts": "^3.3.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
